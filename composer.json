{
    "name": "alu/advent-of-code-in-php8",
    "description": "The complete collection of my solutions to Advent Of Code in PHP 8 - https://adventofcode.com",
    "minimum-stability": "stable",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Oskar Andersson",
            "email": "alu@byteberry.net"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/console": "~5.3"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-libxml": "*",
        "phpunit/phpunit": "~9.5.5",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/dotenv": "~5.3",
        "guzzlehttp/guzzle": "~7.3.0",
        "symfony/finder": "~5.3",
        "symfony/filesystem": "~5.3",
        "league/html-to-markdown": "5.0.2",
        "twig/twig": "^3.0",
        "johnkary/phpunit-speedtrap": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Alu\\": "src/Alu"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alu\\": "src/Alu",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs . --colors --cache --standard=./phpcs.xml -p"
    }
}
